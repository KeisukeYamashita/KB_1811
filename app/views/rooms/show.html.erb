<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @room.name %>
</p>

<table class="table table-hover">
  <thead>
    <tr class="active">
      <th>Name</th>
      <th>Room</th>
      <th>Attachment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.room_id %></td>
        <td><%= user.attachment %></td>
        <td><%= link_to 'Show', user , :class => "btn btn-primary btn-sm"%></td>
        <td><%= link_to 'Edit', edit_user_path(user) , :class => "btn btn-primary btn-sm"%></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } , :class => "btn btn-danger btn-sm"%></td>
      </tr>
    <% end %>
  </tbody>
</table>


<div class="row">
  <div class="col-sm-2">
    <div class="form-group" >
      <%= link_to 'user new', new_room_user_path(@room) %>
    </div>
  </div>
</div>