<p id="notice"><%= notice %></p>

<h1>Rooms</h1>

<table class="table table-hover ">
  <thead>
    <tr class="active">
        <th>#</th>
        <th>Name</th>
        <th>Room</th>
        <th>Attachment</th>
        <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @rooms.each do |room| %>
      <tr  class="active">
        <td><%= room.name %></td>
        <td><%= link_to 'Show', room , :class => "btn btn-primary btn-sm"%></td>
        <td><%= link_to 'Edit', edit_room_path(room), :class => "btn btn-primary btn-sm" %></td>
        <td><%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' } , :class => "btn btn-danger btn-sm"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="row">
  <div class="col-sm-2">
    <div class="form-group" >
      <%= link_to 'New Room', new_room_path, :class => "btn btn-primary" %>
    </div>
  </div>
</div>

